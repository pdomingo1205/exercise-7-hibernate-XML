<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.exer7.hibernate">

	<class name="com.model.person.ContactInfo" table="contact_info">
		<id name="contactInfoId" type="java.lang.Long">
			<column name="CONTACT_INFO_ID" />
			<generator class="foreign">
				<param name="property">person</param>
			</generator>
		</id>

		<one-to-one name="person" class="com.model.person.Person"
			constrained="true"></one-to-one>
		</one-to-one>

		<property name="contactInfo" type="string">
			<column name="CONTACT_INFO"/>
		</property>

	</class>
</hibernate-mapping>
