<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.exer7.hibernate">

	<class name="com.pdomingo.model.person.PersonRole" table="person_role">
		<id name="personRoleId" type="java.lang.Long">
			<column name="PERSON_ROLE_ID" />
			<generator class="foreign">
				<param name="property">person</param>
				<param name="property">role</param>
			</generator>
		</id>

		<one-to-one name="person" class="com.pdomingo.model.person.Person"
			constrained="true">
		</one-to-one>

		<one-to-one name="role" class="com.pdomingo.model.role.Role"
			constrained="true">
		</one-to-one>

	</class>
</hibernate-mapping>
