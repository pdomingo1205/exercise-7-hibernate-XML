<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.exer7.hibernate">

	<class name="com.model.person.PersonRole" table="person_role">
		<id name="personRoleId" type="java.lang.Long">
			<column name="PERSON_ROLE_ID" />
			<generator class="foreign">
				<param name="property">person</param>
				<param name="property">role</param>
			</generator>
		</id>

		<one-to-one name="person" class="com.model.person.Person"
			constrained="true"></one-to-one>
		</one-to-one>

		<one-to-one name="role" class="com.model.role.Role"
			constrained="true"></one-to-one>
		</one-to-one>

	</class>
</hibernate-mapping>
