<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.exer7.hibernate">

	<class name="com.model.person.Person" table="PERSON">

		<id name="id" type="java.lang.Long" column="ID">
			<generator class="sequence"/>
		</id>

		<one-to-one name="name" class="com.model.Name"
			cascade="save-update">
		</one-to-one>

		<one-to-one name="address" class="com.model.Address"
			cascade="save-update">
		</one-to-one>

		<property name="bDay" type="date">
			<column name="BIRTH_DAY"/>
		</property>

		<property name="gwa" type="double">
			<column name="GWA" length="3" />
		</property>

		<property name="dateHired" type="date">
			<column name="DATE_HIRED"/>
		</property>

		<property name="currEmployed" type="boolean">
			<column name="CURR_EMPLOYED"/>
		</property>

		<property name="contactInfo" type="date">
			<column name="BDAY"/>
		</property>

		<set name="contactInfo" table="contact_info"
		inverse="true" lazy="true" fetch="select">
			<key>
				<column name="PERSON_ID" not-null="true" />
			</key>
			<one-to-many class="com.model.person.ContactInfo" />
		</set>

		<set name="contactInfo" table="contact_info"
		inverse="true" lazy="true" fetch="select">
			<key>
				<column name="PERSON_ID" not-null="true" />
			</key>
			<one-to-many class="com.model.person.ContactInfo" />
		</set>

		<set name="roles" table="roles"
		inverse="true" lazy="true" fetch="select">
			<key>
				<column name="PERSON_ID" not-null="true" />
			</key>
			<one-to-many class="com.model.person.PersonRole" />
		</set>

	</class>
</hibernate-mapping>
